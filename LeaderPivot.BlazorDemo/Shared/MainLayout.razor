@inherits LayoutComponentBase
@inject NavigationManager NavManager
@using System.Reflection;

<div id="main-layout-page">
    <NavMenu />

    <div class="col-layout">
        <div class="top-row px-4">@leaderPivotVersion
        </div>

        <main>
            @Body
        </main>
    </div>
</div>

@code {
    private string leaderPivotVersion;

    protected override void OnInitialized()
    {
        leaderPivotVersion = "LeaderPivot.Blazor v" + System.Reflection.Assembly.GetAssembly(typeof(LeaderAnalytics.LeaderPivot.Blazor.MeasureCell)).GetName().Version.ToString();
        NavManager.NavigateTo("leader-pivot-demo");
    }
}